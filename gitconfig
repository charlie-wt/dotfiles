[include]
    ; put per-machine config here (symlinked to $DOTFILES/local/gitconfig)
    path = local.gitconfig
[alias]
    a  = add
    br = branch
    c  = commit -am
    ci = commit
    co = checkout
    d  = diff
    dc = diff --cached
    l  = log --graph --oneline --abbrev-commit --decorate --all
    last = log -1 @
    ll = log --graph --decorate --all
    mg = merge
    s  = status
    smu = !git submodule sync --recursive && git submodule update --init --recursive
    st = stash
    trunk = log --first-parent master
    unstage = reset @ --
    when-deleted = rev-list -n 1 @ --
[diff]
    submodule = log
[merge]
    tool = vimdiff
[mergetool "vimdiff"]
    cmd = "vimdiff -O $LOCAL $MERGED $REMOTE"
[pull]
    rebase = true
; [status]
;     submodulesummary = true
