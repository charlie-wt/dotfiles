[include]
    ; put per-setup config (such as default [user] in this file)
    ; TODO #bug: dotfiles path hard-coded (couldn't get relative path to work)
    path = ~/dotfiles/local.gitconfig
[alias]
    a  = add
    br = branch
    c  = commit -am
    ci = commit
    co = checkout
    d  = diff
    dc  = diff --cached
    l  = log --graph --oneline --abbrev-commit --decorate --all
    last = log -1 HEAD
    ll = log --graph --decorate --all
    mg = merge
    s  = status
    trunk = log --first-parent master
    unstage = reset HEAD --
[merge]
    tool = vimdiff
[mergetool "vimdiff"]
    cmd = "vimdiff -O $LOCAL $MERGED $REMOTE"
; [core]
;     excludesFile = "~/.gitignore"
